{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [
            ".response.ts",
            ".body.ts",
            ".entity.ts",
            ".query.ts"
          ],
          "introspectComments": true,
          "controllerFileNameSuffix": [
            ".controller.ts",
            ".controller.v1.ts",
            ".controller.*.ts"
          ]
        }
      }
    ]
  },
  "projects": {
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    }
  }
}
